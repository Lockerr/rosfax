= form_for @block do |f|
  - if @block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block.errors.count, "error")} prohibited this block from being saved:"
      %ul
        - @block.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :month
    = f.number_field :month
  .field
    = f.label :day
    = f.number_field :day
  .field
    = f.label :hour
    = f.number_field :hour
  .field
    = f.label :company_id
    = f.number_field :company_id
  .actions
    = f.submit 'Save'
