.container
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form form-horizontal' }) do |f|
    %legend Забыли пароль
    = devise_error_messages!
    .control-group
      .control-label
        = f.label :email
      .controls
        = f.email_field :email

    .form-actions
      = f.submit "Отправить инструкцию по восстановлению пароля", :class => 'btn btn-primary' 
      %br/
      %br/
      = render "devise/shared/links"
