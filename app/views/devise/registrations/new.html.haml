.container
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :remote => true, :html => {:class => 'form form-horizontal'}) do |f|
    = devise_error_messages!
    %legend Зарегистрироваться
    .control-group
      .control-label
        = f.label :email
      .controls
        = f.email_field :email
    .control-group
      .control-label
        = f.label :password
      .controls
        = f.password_field :password
    .control-group
      .control-label
        = f.label 'Подтвердите пароль'
      .controls
        = f.password_field :password_confirmation
    .form-actions
      = f.submit "Зарегистрироваться", :class => 'btn btn-primary'
      %br/
      %br/
      = render "devise/shared/links"