!!!
%html
  %head
    %title Tradein
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    %script{:charset => "windows-1251", :src => "http://vk.com/js/api/share.js?11", :type => "text/javascript"}
    %script{:src => "//vk.com/js/api/openapi.js?62", :type => "text/javascript"}/
    = csrf_meta_tags
  %body
    = render 'navbar'
    - if @report and !@report.new_record?
      .container#report{'report' => @report.id, :source => @report.attributes.to_json}
        = yield
    - else
      .container
        = yield

