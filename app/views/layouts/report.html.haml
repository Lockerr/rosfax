!!!
%html
  %head
    %title Tradein
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    %script{:charset => "windows-1251", :src => "http://vk.com/js/api/share.js?11", :type => "text/javascript"}
    %script{:src => "http://vk.com/js/api/openapi.js?62", :type => "text/javascript"}/
    = csrf_meta_tags
  %body
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/ru_RU/all.js#xfbml=1&appId=189791341053526";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    :javascript
      VK.init({apiId: 3208632, onlyWidgets: true});

    = render 'navbar'
    - if @report and !@report.new_record?
      .container#report{'report' => @report.id, :source => @report.attributes.to_json}
        = yield
    - else
      .container
        = yield

