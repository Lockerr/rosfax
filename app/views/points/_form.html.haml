= form_for @point do |f|
  -if @point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@point.errors.count, "error")} prohibited this point from being saved:"
      %ul
        - @point.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :object
    = f.text_field :object
  .field
    = f.label :report_id
    = f.number_field :report_id
  .field
    = f.label :section
    = f.text_field :section
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :condition
    = f.text_field :condition
  .field
    = f.label :state
    = f.text_field :state
  .actions
    = f.submit 'Save'
