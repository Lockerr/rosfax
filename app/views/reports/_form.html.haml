= form_for @report do |f|
  -if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Марка-модель'
    = f.text_field :car_mark_model, :data => {:provide => 'typeahead', :source => @models.keys, :models => @models}, :autocomplete => 'off'
  .actions
    = f.submit 'Save'
