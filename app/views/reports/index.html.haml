:javascript
  document.models = #{@models.to_json};

.container-fluid
  .row
    .span4.offset2
      .function-frame
        .logotype
          rosfax.ru
        .links
          .link.pull-left
            =link_to 'войти', new_user_session_path
          .link.pull-left{:style => 'margin-left: 28px'}
            =link_to 'зарегистрироваться', new_user_registration_path
          .main-search
            = text_field 'search', 'queue', :class => 'main-input', :data => {:provide => 'typeahead', :source => @models.keys}
            = image_tag asset_path('search.png')
    .span4
      .selected-models


  .main-unit
    .main-frame
      .main-car
      .main-lines-1
        .line
          .speach2.pull-left
            Машина без фото
            %br/
            %bigger{:style => 'font-size: 26px'}
              продается
            %bigger-black{:style => 'font-size: 24px; color: black'}
              за
          .main-diggit.pull-left
            6
            %smaller
              недель

        .line
          .speach2.pull-left{:style => 'color: #a28e31'}
            Машина с фото
            %br/
            %bigger{:style => 'font-size: 26px'}
              продается
            %bigger-black{:style => 'font-size: 24px; color: black'}
              за
          .main-diggit.pull-left
            3
            %smaller
              недели
        .line
          .percentage
          .speach2.pull-left{:style => 'color: #42702f'}
            Машина с rosfax.ru
            %br/
            %bigger{:style => 'font-size: 26px'}
              продается
            %bigger-black{:style => 'font-size: 24px; color: black'}
              за
          .main-diggit.pull-left{:style => 'margin-left: 2px'}
            1
            %smaller
              неделю

      .main-lines-2
        .line
          .percentage
            80%
          .speach
            машин
            %br/
            без фотографий
            .epilogue{:style => 'font-size: 16px'}
              имеют серьезные дефекты
        .line
          .percentage
            40%
          .speach{:style => 'color: #a28e31'}
            машин
            %br/
            с фотографиями
            .epilogue{:style => 'font-size: 14px'}
              сняты с выгодных ракурсов
        .line
          .percentage
            100%
          .speach{:style => 'color: #42702f'}
            машин
            %br/
            на rosfax.ru
            .epilogue{:style => 'font-size: 13px'}
              с проверенной информацией



.hero-unit
  %h2 Список отчетов

  %table.table-bordered.table-striped
    %thead
      %tr
        %th Машина
        %th Год выпуска
        %th VIN
        %th Год выпуска
        %th Дата создания

    %tbody
      - @reports.each do |report|
        %tr
          %td= report.car[:mark_model]
          %td= report.car[:car][:year] if report.car[:car]
          %td= report.car[:vin]
          %td= report.car[:gov_number]
          %td= report.created_at.strftime('%d.%m.%y')
          %td
            .btn.btn-primary{:onclick => "window.location.href = '#{report_path(report)}'"}
              Изменить
            .btn.btn-danger.destroy_report{'data-confirm' => 'Точно?', :report_id => report.id}
              Уничтожить

  %br

  .btn.btn-primary{:onclick => "window.location.href = '#{new_report_path}'"}
    Новый отчет
