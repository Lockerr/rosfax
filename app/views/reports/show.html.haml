%p#notice= notice
.row-fluid
  .span12
    .tabbable.tabs-left
      %ul.nav.nav-tabs.first
        %li.active
          %a{"data-toggle" => "tab", :href => "#info"}
            Информация
            %span{:style => 'color: #ddd'}= @report.counters[:car][:summ][2]


        %li
          %a{"data-toggle" => "tab", :href => "#lA"}
            Фото
            %span{:style => 'color: #ddd'}= @report.counters[:photo][:summ][2]
        %li
          %a{"data-toggle" => "tab", :href => "#lB"}
            Чеклист
            %span{:style => 'color: #ddd'}= @report.counters[:checklist][:summ][2]
        %li
          %a{"data-toggle" => "tab", :href => "#lC"}
            Дефекты
            %span{:style => 'color: #ddd'}= @report.defects.size
        %li
          %a{"data-toggle" => "tab", :href => "#lD"} Тест-драйв
        %li
          %a{"data-toggle" => "tab", :href => "#lE"} Комплектация
      .tab-content.first
        - for symbol in %w(A B C D E F G H)
          = render "reports/tabs/l#{symbol}"
        .tab-pane#info.active
          = render 'reports/info'



.span4.uploader.hide
  = render :partial => 'uploader', :locals => {:attribute => ''}

