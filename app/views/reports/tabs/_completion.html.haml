              %label.control-label= t("checklist.completion.#{param}").to_s+ ':'
              .controls
                .btn-toolbar.pull-left{:style => 'margin-top: 0px'}
                  .btn-group.pads.radio
                    - %w(есть нет н/п).each do |i|
                      %button.checkbox.btn{:data => {:attribute => :checklist, :place => :completion, :change => param, param => i}}=i

