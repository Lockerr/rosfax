.row{:style => 'margin-left: 0px'}
  .span6
    .well.well-small
      %legend Заголовок 1
      .form-horizontal
        - %w( glass_elevators central_locking seat_drive seat_heat mirrors hatch).each do |param|
          .control-group
            %label.control-label= t("checklist.electronic.#{param}").to_s+ ':'
            .controls
              .btn-toolbar.pull-left{:style => 'margin-top: 0px'}
                .btn-group.pads.radio
                  - parameters = {:report_id => @report.id, :object => 'check', :section => 'electronic', :place => param}
                  = parameters
                  - if check = @points.where(parameters).first()
                    - parameters[:id] = check.id
                  -%w(ок проблемы н/п).each do |i|
                    - parameters[:condition] = i
                    %button.check.btn{:data => parameters, :class => ('btn-primary' if check.condition == i if check)}= i

