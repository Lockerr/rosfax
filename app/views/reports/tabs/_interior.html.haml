- placements = Report::INTERIOR
.row-fluid{:id => 'interior'}

  .span8
    %ul.thumbnails
      - for place in placements[0..2]
        - image = @report.image(:attribute => 'interior', :place => place)
        %li.drop{:id => place, :image => image.try(:first).try(:first), 'drop-to' => 'report'}
          .thumbnail{:style => 'width: 100px; float: left; margin-right: 5px; height: 67px'}
            = link_to (image ? image_tag(image.first[1]) : place), '#', :style => 'height: 68px; width: 100px'
            .btn.btn-mini{:style => 'position: relative; top: -20px; left: 80px', :id => image ? image[0] : ''}
              = @report.interior[place].try(:count)
    %ul.thumbnails
      - for place in placements[3..5]
        - image = @report.image(:attribute => 'interior', :place => place)
        %li.drop{:id => place, :image => image.try(:first).try(:first)}
          .thumbnail{:style => 'width: 100px; float: left; margin-right: 5px; height: 67px'}
            = link_to (image ? image_tag(image.first[1]) : place), '#', :style => 'height: 68px; width: 100px'
            .btn.btn-mini{:style => 'position: relative; top: -20px; left: 80px', :id => image ? image[0] : ''}
              = @report.interior[place].try(:count)

    %ul.thumbnails
      - for place in placements[6..8]
        - image = @report.image(:attribute => 'interior', :place => place)
        %li.drop{:id => place, :image => image.try(:first).try(:first)}
          .thumbnail{:style => 'width: 100px; float: left; margin-right: 5px; height: 67px'}
            = link_to (image ? image_tag(image.first[1]) : place), '#', :style => 'height: 68px; width: 100px'
            .btn.btn-mini{:style => 'position: relative; top: -20px; left: 80px', :id => image ? image[0] : ''}
              = @report.interior[place].try(:count)
    .span{:style => "height: 96px; overflow-x: scroll; width: 98%; overflow-y: hidden;"}
      .imgbox{:style => "height: 110px; width: #{@report.images(:group => 'interior', :size => 'thumb').size*116}px"}
        - for image in @report.images(:group => 'interior', :size => 'thumb')
          .thumbnail{:style => 'width: 100px; float: left; margin-right: 5px; height: 67px'}
            = image_tag(image[1])
            .btn.remove_asset.btn-danger.btn-mini{:style => 'position: relative; top: -20px; left: 80px', :id => image[0]} x

  .span4
    =render 'uploader'


