.row{:style => 'margin-left: 0px; margin-bottom: 10px'}
  .span12
    .well.well-small
      %legend Уровни технических жидкостей
      .form-horizontal
        - %w(engine transmission antifreeze power_steering brake).each do |param|
          .control-group
            %label.control-label= t("checklist.liquids.#{param}").to_s+ ':'
            .controls
              .btn-toolbar.pull-left{:style => 'margin-top: 0px'}
                .btn-group.pads.radio
                  - %w(OK -min min max max+).each do |i|
                    %button.checkbox.btn{:data => {:attribute => :checklist, :place => :liquids, :change => param, param => i}}=i

