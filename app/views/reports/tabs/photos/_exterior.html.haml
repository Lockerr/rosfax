- placements = Report::PHOTO_EXTERIOR
.row-fluid{:id => 'exterior'}

  .span8.well
    %ul.thumbnails.span7
      = render :partial => 'new_drop', :locals => {:assets => @report.assets(:section => :exterior).group(:position), :count => @report.assets(:section => :exterior).group(:position).count, :section => :exterior}
    .span{:style => "height: 96px; overflow-x: scroll; width: 100%; overflow-y: hidden;border: 1px solid #08C; margin-left: 0"}
      .imgbox#exterior{:style => "height: 110px; width: #{@report.images(:group => 'exterior', :size => 'thumb').size*116}px", :data => {:attribute => 'exterior', :place => placements.first}}
        - for image in @report.assets.where(:section => :exterior)
          .thumbnail{:style => 'width: 100px; float: left; margin-right: 5px; height: 67px'}
            .thumb{:data => image.attributes}
              = image_tag(image.url(:thumb))
            .btn.remove_asset.btn-danger.btn-mini{:style => 'position: relative; top: -20px; left: 80px',:id => image.id} x



