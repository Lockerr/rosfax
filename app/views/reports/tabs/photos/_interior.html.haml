- placements = Report::INTERIOR
.row-fluid{:id => 'interior'}

  .span8.well
    %ul.thumbnails.span7
      = render :partial => 'new_drop', :locals => {:assets => @report.assets(:section => :interior).group(:position), :count => @report.assets(:section => :interior).group(:position).count, :section => :interior}
    .span{:style => "height: 96px; overflow-x: scroll; width: 100%; overflow-y: hidden;border: 1px solid #08C; margin-left: 0"}
      .imgbox#interior{:style => "height: 110px; width: #{@report.images(:group => 'interior', :size => 'thumb').size*116}px", :data => {:attribute => 'interior', :place => placements.first}}
        - for image in @report.assets.where(:section => :interior)
          .thumbnail{:style => 'width: 100px; float: left; margin-right: 5px; height: 67px'}
            .thumb{:data => image.attributes}
              = image_tag(image.url(:thumb))
            .btn.remove_asset.btn-danger.btn-mini{:style => 'position: relative; top: -20px; left: 80px',:id => image.id} x





